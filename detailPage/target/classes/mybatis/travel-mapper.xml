<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
	"-//mybatis.org//DTD Mapper 3.0//EN"
	 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itbank.repository.TravelDAO">

	<select id="selectOne" resultType="travel" parameterType="String">
     SELECT *
     	FROM (
		    SELECT *
		    FROM RECOMMEND_TRAVEL
		    WHERE recommend_travel_address LIKE '%${value}%'
		    ORDER BY dbms_random.value
		)
		FETCH FIRST 4 ROWS ONLY
	</select>

	<select id="selectOneByIdx" parameterType="int" resultType="travel">
		select *
			from recommend_Travel
				where recommend_travel_idx = #{recommend_travel_idx}
	</select>
	

</mapper>